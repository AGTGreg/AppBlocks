{
  "name": "appblocks",
  "version": "2.1.1",
  "type": "module",
  "description": "A lightweight javascript library for building micro apps for the front-end.",
  "main": "dist/appblocks.cjs.js",
  "module": "dist/appblocks.esm.js",
  "browser": "dist/appblocks.umd.js",
  "minified": "dist/appblocks.min.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "npm run build:test && jest",
    "test:watch": "npm run build:test && jest --watch",
    "test:coverage": "npm run build:test && jest --coverage",
    "test:core": "npm run build:test && jest tests/core",
    "test:directives": "npm run build:test && jest tests/directives",
    "test:filters": "npm run build:test && jest tests/filters",
    "test:utils": "npm run build:test && jest tests/utils",
    "test:processing": "npm run build:test && jest tests/processing",
    "test:requests": "npm run build:test && jest tests/requests",
    "build": "rollup --config",
    "prebuild": "npm run clean:build",
    "build:test": "npm run clean:build && npx babel src --out-dir build-cjs --extensions \".js\" --copy-files && npm run coverage:ignore-helpers",
    "clean:build": "rm -rf build-cjs",
    "coverage:ignore-helpers": "node scripts/add-coverage-ignores.cjs",
    "docs:serve": "docsify serve docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AGTGreg/AppBlocks.git"
  },
  "keywords": [
    "appblocks",
    "microapps",
    "frontend",
    "interface",
    "HTML"
  ],
  "author": "Grigoris Chatzinikolaou",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AGTGreg/AppBlocks/issues"
  },
  "homepage": "https://agtgreg.github.io/AppBlocks",
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@jridgewell/sourcemap-codec": "^1.5.5",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-jest": "^30.2.0",
    "core-js": "^3.46.0",
    "idiomorph": "^0.7.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.1.0",
    "rollup": "^4.53.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-gzip": "^4.1.1"
  }
}
